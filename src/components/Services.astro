---
import "../styles/components/Services.css";

const servicesData = [
  {
    title: "Transporte Internacional",
    description:
      "Movimiento de carga aéreo, marítimo y terrestre con un volumen de 300+ contenedores mensuales.",
    path: "/transporte",
    iconPath: "M12 19l9 2-9-18-9 18 9-2zm0 0v-8",
  },
  {
    title: "Comercializadora",
    description:
      "Nacionalización de productos bajo nuestro padrón de importadores. Seguridad fiscal y legal total.",
    path: "/comercializadora",
    iconPath:
      "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z",
  },
  {
    title: "Despacho Aduanal",
    description:
      "Gestión experta de trámites ante la aduana. Puerta de entrada a una logística sin complicaciones.",
    path: "/aduana",
    iconPath:
      "M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9",
  },
  {
    title: "Almacenadora Genca",
    description:
      "Depósito fiscal y almacenaje neutral para clientes y otros agentes de carga.",
    path: "/almacenadora",
    iconPath:
      "M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10",
  },
  {
    title: "Asesoría Gratuita",
    description:
      "Clasificación arancelaria y soporte preventivo para evitar retenciones de carga.",
    path: "/aduana",
    iconPath:
      "M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z",
  },
  {
    title: "Seguro & Trámites",
    description: "Pólizas directas y gestión ante COFEPRIS / SEMARNAT.",
    path: "/aduana",
    iconPath:
      "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
  },
];
---

<div class="services-grid">
  {
    servicesData.map((service) => (
      <a
        href={`${import.meta.env.BASE_URL}${service.path.replace(/^\//, "")}${service.path.endsWith("/") || service.path.includes("#") ? "" : "/"}`}
        class="service-card group"
      >
        <div class="service-icon-wrapper">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="1.5"
              d={service.iconPath}
            />
          </svg>
        </div>
        <h3>{service.title}</h3>
        <p>{service.description}</p>
        <span class="service-link">
          Saber más
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"
            />
          </svg>
        </span>
      </a>
    ))
  }
</div>
