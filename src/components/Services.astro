---
import "../styles/components/Services.css";
import { Icon } from "astro-icon/components";

const servicesData = [
  {
    title: "Transporte Internacional",
    description:
      "Movimiento de carga aéreo, marítimo y terrestre con un volumen de 300+ contenedores mensuales.",
    path: "/transporte",
    iconName: "lucide:plane",
  },
  {
    title: "Comercializadora",
    description:
      "Nacionalización de productos bajo nuestro padrón de importadores. Seguridad fiscal y legal total.",
    path: "/comercializadora",
    iconName: "lucide:file-text",
  },
  {
    title: "Despacho Aduanal",
    description:
      "Gestión experta de trámites ante la aduana. Puerta de entrada a una logística sin complicaciones.",
    path: "/aduana",
    iconName: "lucide:globe",
  },
  {
    title: "Almacenadora",
    description:
      "Depósito fiscal y almacenaje neutral para clientes y otros agentes de carga.",
    path: "/almacenadora",
    iconName: "lucide:warehouse",
  },
  {
    title: "Asesoría Gratuita",
    description:
      "Clasificación arancelaria y soporte preventivo para evitar retenciones de carga.",
    path: "/aduana",
    iconName: "lucide:message-square",
  },
  {
    title: "Seguro & Trámites",
    description: "Pólizas directas y gestión ante COFEPRIS / SEMARNAT.",
    path: "/aduana",
    iconName: "lucide:shield-check",
  },
];
---

<div class="services-grid">
  {
    servicesData.map((service) => (
      <a
        href={`${import.meta.env.BASE_URL}${service.path.replace(/^\//, "")}${service.path.endsWith("/") || service.path.includes("#") ? "" : "/"}`}
        class="service-card group"
      >
        <div class="service-icon-wrapper">
          <Icon name={service.iconName} />
        </div>
        <h3>{service.title}</h3>
        <p>{service.description}</p>
        <span class="service-link">
          Saber más
          <Icon name="lucide:chevron-right" />
        </span>
      </a>
    ))
  }
</div>
