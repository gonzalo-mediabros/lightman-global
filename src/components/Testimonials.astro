---
import "../styles/components/Testimonials.css";

const reviews = [
  {
    name: "Carlos Méndez",
    role: "Director de Operaciones",
    company: "InduTech Corp",
    text: "GlobalFreight transformó nuestra cadena de suministro. El despacho aduanal que solía tomarnos días, ahora se resuelve en horas gracias a su equipo experto.",
  },
  {
    name: "Elena Rodríguez",
    role: "Gerente de Exportaciones",
    company: "FruitGlobal S.A.",
    text: "La confianza es clave cuando mueves productos perecederos. Su servicio de transporte aéreo es impecable y siempre llegan a tiempo.",
  },
  {
    name: "Roberto Silva",
    role: "CEO",
    company: "Silven Import",
    text: "Excelente servicio de consolidación. Han logrado reducir nuestros costos logísticos en un 25% anual desde que empezamos a trabajar juntos.",
  },
];
---

<section id="testimonials" class="testimonials">
  <div class="testimonials-container">
    <div class="testimonials-header">
      <h2>Lo que dicen nuestros clientes</h2>
      <div class="testimonials-divider"></div>
    </div>

    <div class="testimonials-grid">
      {
        reviews.map((rev) => (
          <div class="testimonial-card">
            <div class="stars">
              {[...Array(5)].map(() => (
                <svg viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <p class="testimonial-text">"{rev.text}"</p>
            <div class="testimonial-author">
              <div class="author-avatar">{rev.name.charAt(0)}</div>
              <div class="author-info">
                <h4>{rev.name}</h4>
                <p>
                  {rev.role} - {rev.company}
                </p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
