      <Footer />
      <WhatsAppButton />
    </div>
  </body>
</html>

<style is:global>
  .flex-wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  .main-content {
    flex-grow: 1;
  }
</style>
